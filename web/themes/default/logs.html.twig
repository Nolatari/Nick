<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Recent logs{% if count > 0 %} <a class="btn btn-primary" href="./?p=logs&t=clear">Clear logs</a>{% endif %}</h1>

    <!-- Logs table -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Owner</th>
                        <th>Category</th>
                        <th>Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for log in logs %}
                    <tr>
                        <td>{{ log.id }}</td>
                        <td>{{ log.type }}</td>
                        <td>{{ log.owner }}</td>
                        <td>{{ log.category }}</td>
                        <td>{{ log.message }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>