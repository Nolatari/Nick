    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">{{ page.title }}</h1>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="row">
            <h2>Status</h2>
        </div>
        <div class="row">
            <p>{{ message }}</p>
        </div>
        <div class="row">
            {% if showButtons %}
                {% for key, name in buttons %}
                    {% set url = route(['dummycontent', key], {'confirm': null}) %}
                <p>
                    {{ formElement('button', {
                        text: name,
                        classes: ['btn-primary'],
                        formId: 'dummycontent',
                        key: key,
                        attributes: { onclick: 'window.location.href = \'' ~ url|raw ~ '\'' }
                    })|raw }}
                </p>&nbsp;
                {% endfor %}
            {% endif %}
        </div>
    </div>