<div class="form-group row">
    <label for="{{ formId }}-{{ key }}" class="col-sm-4 col-form-label">{{ title }}</label>
    <div class="col-sm-8">
        <textarea class="form-control{% if classes %}{% for class in classes %} {{ class }}{% endfor %}{% endif %}"
                  id="{{ formId }}-{{ key }}"{% for key,value in attributes %}{% if key != 'value' %} {{ key }}="{{ value|raw }}"{% endif %}{% endfor %}
        aria-describedby="{{ formId }}-{{ key }}-description">
        {{- attributes.value|raw -}}
        </textarea>
        {% if description %}
            <small id="{{ formId }}-{{ key }}-description" class="form-text text-muted">{{ description }}</small>
        {% endif %}
    </div>
</div>