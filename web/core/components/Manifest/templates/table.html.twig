<!-- Content Row -->
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        {% for field in fields %}
                            {% if not hidden[field] %}
                                <th>{{ field }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for data in values %}
                    <tr>
                        {% for field in fields %}
                            {% if not hidden[field] %}
                                {% if field == 'title' %}
                                    <td><a href="{{ route('article.view', {'id': data.id}) }}">{{ data[field]|raw }}</a></td>
                                {% else %}
                                    <td>{{ data[field]|raw }}</td>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        {% for field in fields %}
                            {% if not hidden[field] %}
                                <th>{{ field }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>